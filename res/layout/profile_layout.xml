<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="15.34">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <EditText
	        android:id="@+id/profileEmail"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="15.34"
	        android:inputType="textEmailAddress" >	
	        <requestFocus />
	    </EditText>

        <TextView
            android:id="@+id/profileFirstNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <EditText
	        android:id="@+id/profileFirstName"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="15.34"
	        android:inputType="textCapWords"/>	

	    <TextView
            android:id="@+id/profileLastNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <EditText
	        android:id="@+id/profileLastName"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="15.34"
	        android:inputType="textCapWords"/>	
	    
        <TextView
            android:id="@+id/profileGenderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <Spinner
            android:id="@+id/profileGender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/profileGenderPrompt"/>

	    <TextView
            android:id="@+id/profileHomePhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Phone"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <EditText
	        android:id="@+id/profileHomePhone"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="15.34"
	        android:inputType="phone"/>	

	    <TextView
            android:id="@+id/profileMobilePhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Phone"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <EditText
	        android:id="@+id/profileMobilePhone"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="15.34"
	        android:inputType="phone"/>	
	    
	    <TextView
            android:id="@+id/profileWorkPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Phone"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <EditText
	        android:id="@+id/profileWorkPhone"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="15.34"
	        android:inputType="phone"/>	

	    <TextView
            android:id="@+id/profileFaxLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fax"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <EditText
	        android:id="@+id/profileFax"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="15.34"
	        android:inputType="phone"/>

        <TextView
            android:id="@+id/profileBirthdayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <DatePicker
            android:id="@+id/profileBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
	    <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="horizontal"
	        android:layout_margin="5sp">

	        <Button
	            android:id="@+id/profileUpdateButton"
	            android:layout_width="165dp"
	            android:layout_height="fill_parent"
	            android:text="Update" />

	        <Button
	            android:id="@+id/profileCancelButton"
	            android:layout_width="165dp"
	            android:layout_height="fill_parent"
	            android:text="Cancel" />
	    </LinearLayout>
	
	</LinearLayout>
</ScrollView>
